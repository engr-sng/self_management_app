<div class="wrapper">
  <div class="container">
    <div class="form-container">
      <div class="box-100">
        <h2>プロジェクトメンバーの追加</h2>
      </div>

      <%= render "layouts/errors", obj: @project_member_new %>

      <div class="box-100">
        <%= form_with model: @project_member_new, url: project_project_members_path(@project.id), local: true, method: :post do |f| %>
          <div class="form-field">
            <%= f.label :user_name, "ユーザーネーム" %><br>
            <%= f.text_field :user_name, id: "keyword", class: "form-textbox" %>
          </div>

          <div class="form-action">
            <%= f.submit "追加", class: "btn green-color" %>
          </div>

          <div class="form-action">
            <%= link_to "戻る", project_path(@project.id), method: :get, class: "btn blue-color" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
$(function () {
  $("#keyword").autocomplete({
    source: <%== @users %>
  });
});
</script>