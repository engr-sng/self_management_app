<div class="wrapper">
  <div class="container">
    <div class="form-container">
      <div class="box-100">
        <h2>資料の新規作成</h2>
      </div>

      <%= render "layouts/errors", obj: @document_new %>

      <div class="box-100">
        <%= form_with model: @document_new, url: project_documents_path(@project.id), local: true, method: :post do |f| %>

          <div class="form-field">
            <%= f.label :title, "タイトル(最大32字)" %><br>
            <%= f.text_field :title, class: "form-textbox" %>
          </div>

          <div class="form-field">
            <%= f.label :description, "説明(最大140字)" %><br>
            <%= f.text_area :description, class: "form-textbox" %>
          </div>

          <div class="form-field">
            <%= f.label :url, "URL" %><br>
            <%= f.text_area :url, class: "form-textbox" %>
          </div>

          <div class="form-action">
            <%= f.submit "新規作成", class: "btn green-color" %>
          </div>

        <% end %>

        <div class="form-action">
          <%= link_to "戻る", project_path(@project.id), method: :get, class: "btn blue-color" %>
        </div>
      </div>
    </div>
  </div>
</div>