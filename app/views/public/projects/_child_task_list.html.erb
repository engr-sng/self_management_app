<td><%= child_task.parent_task.display_order %>-<%= child_task.display_order %></td>
<td><i class="fa fa-right-from-bracket"></i><%= link_to child_task.title, project_child_task_path(child_task.project.id,child_task.id), method: :get %></td>
<td><%= child_task.start_date %></td>
<td><%= child_task.end_date %></td>
<td>
  <%= form_with model: child_task, url: project_child_task_select_update_path(child_task.project.id, child_task.id), local: false, method: :patch do |f| %>
    <%= f.select :status, options_for_select(ChildTask.statuses_i18n.invert, child_task.status),{ }, {id: "", class: "form-textbox select-status"} %>
  <% end %>
</td>
<td><%= child_task.progress %>%</td>
<td><%= child_task.user.display_name %></td>
<% if (child_task.project.project_start_date.class == Date) && (child_task.project.project_end_date.class == Date) %>
  <% (child_task.project.project_start_date..child_task.project.project_end_date).each do |day| %>
  <td class="<%= child_task.date_comparison(day) %>"></td>
  <% end %>
<% end %>