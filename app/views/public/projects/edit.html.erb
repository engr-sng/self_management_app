<div class="wrapper">
  <div class="container">
    <div class="form-container">
      <h2>プロジェクトの編集</h2>

      <%= render "layouts/errors", obj: @project %>

      <%= form_with model: @project, url: project_path(@project.id), local: true, method: :patch do |f| %>
        <div class="form-field">
          <%= f.label :title, "タイトル(最大32字)" %><br>
          <%= f.text_field :title, class: "form-textbox" %>
        </div>

        <div class="form-field">
          <%= f.label :description, "説明(最大140字)" %><br>
          <%= f.text_area :description, class: "form-textbox" %>
        </div>

        <div class="form-field">
          <p>開始日(※開始日は自動更新のため変更できません。)<br>
          <span class="form-textbox"><%= @project.project_start_date.strftime("%Y/%m/%d") %></p>
        </div>

        <div class="form-field">
          <p>終了日(※終了日は自動更新のため変更できません。)<br>
          <span class="form-textbox"><%= @project.project_end_date.strftime("%Y/%m/%d") %></p>
        </div>

        <div class="form-field">
          <%= f.label :user_id, "プロジェクトオーナー" %><br>
          <%= f.select :user_id, options_for_select(@project.select_menber_list, @project.user_id),{ }, {id: "", class: "form-textbox"} %>
        </div>

        <div class="form-action">
          <%= f.submit "更新", class: "btn green-color" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
