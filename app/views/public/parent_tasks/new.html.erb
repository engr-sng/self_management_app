<div class="wrapper">
  <div class="container flex-box">
    <div class="form-container">
      <h2>親タスクの新規作成</h2>

      <%= render "layouts/errors", obj: @parent_task_new %>

      <%= form_with model: @parent_task_new, url: project_parent_tasks_path(@project.id), local: true, method: :post do |f| %>

        <div class="form-field">
          <%= f.label :title, "タイトル(最大32字)" %><br>
          <%= f.text_field :title, class: "form-textbox" %>
        </div>

        <div class="form-field">
          <%= f.label :description, "説明(最大140字)" %><br>
          <%= f.text_area :description, class: "form-textbox" %>
        </div>

        <div class="form-action">
          <%= f.submit "新規作成", class: "btn green-color" %>
        </div>

      <% end %>

      <div class="form-action">
        <%= link_to "戻る", project_path(@project.id), method: :get, class: "btn blue-color" %>
      </div>
    </div>
  </div>
</div>